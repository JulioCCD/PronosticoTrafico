        <script>
            const daysElement = document.getElementById('days');
    const monthYearElement = document.getElementById('monthYear');
    const selectedDateElement = document.getElementById('selectedDate');
    const selectedDateTitle = document.getElementById('selectedDateTitle');
    const hoursList = document.getElementById('hoursList');
    const totalHoursElement = document.getElementById('totalHours');
    const prevMonthButton = document.getElementById('prevMonth');
    const nextMonthButton = document.getElementById('nextMonth');

    const months = [
        'Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio',
        'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'
    ];

    let currentDate = new Date();
    const dateData = {};

    function renderCalendar() {
        daysElement.innerHTML = '';
        const year = currentDate.getFullYear();
        const month = currentDate.getMonth();
        const firstDayOfMonth = new Date(year, month, 1).getDay();
        const lastDateOfMonth = new Date(year, month + 1, 0).getDate();

        const today = new Date();
        const maxDate = new Date(today);
        maxDate.setDate(today.getDate() + 2);

        const minDate = new Date(today);
        minDate.setDate(today.getDate() - 1);

        monthYearElement.textContent = `${months[month]} ${year}`;

        for (let i = 0; i < firstDayOfMonth; i++) {
            daysElement.innerHTML += '<div></div>';
        }

        for (let date = 1; date <= lastDateOfMonth; date++) {
            const dateElement = document.createElement('div');
            const fullDate = new Date(year, month, date);

            dateElement.textContent = date;

            if (fullDate > maxDate || fullDate < minDate) {
                dateElement.classList.add('disabled');
            } else {
                dateElement.classList.add('enabled');
                dateElement.addEventListener('click', () => {
                    const selectedFullDate = `${year}-${month + 1}-${date}`;
                    selectedDateTitle.textContent = `Fecha seleccionada: ${date} ${months[month]} ${year}`;
                    renderHours(selectedFullDate);
                    selectedDateElement.style.display = 'block';
                    selectedDateElement.style.position = 'relative';
                    selectedDateElement.style.left = '738px';
                });
            }

            daysElement.appendChild(dateElement);
        }
    }

    function renderHours(selectedFullDate) {
        hoursList.innerHTML = '';

        if (!dateData[selectedFullDate]) {
            dateData[selectedFullDate] = {};
        }

        let totalHours = 0;

        for (let hour = 12; hour < 20; hour++) {
            const hourContainer = document.createElement('div');
            hourContainer.className = 'hour-container';

            const hourHeader = document.createElement('div');
            hourHeader.className = 'hour-header';
            hourHeader.textContent = `${hour}:00`;
            hourHeader.addEventListener('click', () => {
                const intervals = hourContainer.querySelector('.intervals');
                intervals.style.display = intervals.style.display === 'none' ? 'block' : 'none';
            });
            hourContainer.appendChild(hourHeader);

            const totalLabel = document.createElement('div');
            totalLabel.className = 'total-label';
            totalLabel.textContent = 'Total: 0';
            hourContainer.appendChild(totalLabel);

            const intervals = document.createElement('div');
            intervals.className = 'intervals';
            intervals.style.display = 'none';

            for (let minute = 0; minute < 60; minute += 10) {
                const time = `${hour}:${minute < 10 ? '0' : ''}${minute}`;
                if (!dateData[selectedFullDate][time]) {
                    dateData[selectedFullDate][time] = 0;
                }

                const intervalEntry = document.createElement('div');
                intervalEntry.className = 'interval-entry';

                const intervalLabel = document.createElement('label');
                intervalLabel.textContent = time;
                intervalEntry.appendChild(intervalLabel);

                const rangeInput = document.createElement('input');
                rangeInput.type = 'range';
                rangeInput.min = '0';
                rangeInput.max = '10';
                rangeInput.value = dateData[selectedFullDate][time];
                intervalEntry.appendChild(rangeInput);

                const numberInput = document.createElement('input');
                numberInput.type = 'number';
                numberInput.min = '0';
                numberInput.max = '10';
                numberInput.value = dateData[selectedFullDate][time];
                numberInput.addEventListener('input', () => {
                    rangeInput.value = numberInput.value;
                    dateData[selectedFullDate][time] = parseInt(numberInput.value);
                    updateTotalLabel(totalLabel, selectedFullDate, hour);
                    updateTotalHours(selectedFullDate);
                });
                rangeInput.addEventListener('input', () => {
                    numberInput.value = rangeInput.value;
                    dateData[selectedFullDate][time] = parseInt(rangeInput.value);
                    updateTotalLabel(totalLabel, selectedFullDate, hour);
                    updateTotalHours(selectedFullDate);
                });
                intervalEntry.appendChild(numberInput);

                intervals.appendChild(intervalEntry);
            }

            hourContainer.appendChild(intervals);
            hoursList.appendChild(hourContainer);
        }

        updateTotalHours(selectedFullDate);
    }

    function updateTotalLabel(totalLabel, selectedFullDate, hour) {
        const total = Object.keys(dateData[selectedFullDate])
            .filter(time => time.startsWith(`${hour}:`))
            .reduce((sum, time) => sum + dateData[selectedFullDate][time], 0);
        totalLabel.textContent = `Total: ${total}`;
    }

    function updateTotalHours(selectedFullDate) {
        const total = Object.values(dateData[selectedFullDate])
            .reduce((sum, value) => sum + value, 0);
        totalHoursElement.textContent = `Total Horas: ${total}`;
    }

    prevMonthButton.addEventListener('click', () => {
        currentDate.setMonth(currentDate.getMonth() - 1);
        renderCalendar();
    });

    nextMonthButton.addEventListener('click', () => {
        currentDate.setMonth(currentDate.getMonth() + 1);
        renderCalendar();
    });

    renderCalendar();
        </script>
        
